
<div class="panel panel-container">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
      <div class="alert bg-info"> Transaction preview <a href="#" class="pull-right"></a></div>
      <table class="table table-hover">
        <thead>
            <tr>
              <td>Name</td>
              <td><strong>{{values.name}}</strong></td>
           </tr>
           <tr>
             <td>Price</td>
             <td><strong>{{values.price}}</strong></td>
          </tr>
          <tr>
            <td>Amount</td>
            <td><strong>{{values.amount}}</strong></td>
         </tr>
         <tr>
           <td>Total</td>
           <td><strong>{{values.total}} USD</strong></td>
        </tr>
      </thead>
      </table>

      <form action="/transaction/payment" method="post">
        <label style="font-style:italic; color:#cc3300">Please enter {{values.name}}'s wallet address</label>
        <input type="text" name="walletAddr" placeholder="Wallet Address" class="form-control" /><hr/>
        <input name="name" value="{{values.name}}" type="hidden"/>
        <input name="price" value="{{values.price}}" type="hidden"/>
        <input name="amount" value="{{values.amount}}" type="hidden"/>
        <input name="total" value="{{values.total}}" type="hidden"/>
        <input name="coinId" value="{{values.coinId}}" type="hidden"/>
        <button type="submit" class="btn btn-primary">Proceed to payment</button><p></p>
      </form>

    </div>

    <div class="col-lg-3"></div>
  </div>
</div>
